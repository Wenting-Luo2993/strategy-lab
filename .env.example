# .env.example
# Environment variables template for trading bot
#
# INSTRUCTIONS:
# 1. Copy this file to .env (for local) or .env.dev/.env.prod
# 2. Fill in your actual API keys and secrets
# 3. NEVER commit .env files to git!
#
# The .env file is loaded by Pydantic Settings and overrides YAML config values

# ============================================================
# ENVIRONMENT
# ============================================================
# Specify which environment to run
# Options: local, dev, prod, test
TRADING_ENV=local

# ============================================================
# API CONFIGURATION
# ============================================================
# API server settings
API__HOST=0.0.0.0
API__PORT=8080
API__BASE_URL=http://localhost:8080

# Enable API key authentication (prod only)
API__ENABLE_AUTH=false
# Generate UUID for production: python -c "import uuid; print(uuid.uuid4())"
API__API_KEY=

# ============================================================
# DATA PROVIDER API KEYS
# ============================================================
# Finnhub (free tier: 60 calls/minute)
# Sign up: https://finnhub.io/register
DATA__FINNHUB_API_KEY=

# Polygon.io (optional, better data quality)
# Sign up: https://polygon.io/
DATA__POLYGON_API_KEY=

# Alpaca (for live trading later)
# Sign up: https://alpaca.markets/
DATA__ALPACA_API_KEY=
DATA__ALPACA_SECRET_KEY=

# ============================================================
# EXCHANGE/BROKER CONFIGURATION
# ============================================================
EXCHANGE__EXCHANGE_TYPE=mock
EXCHANGE__INITIAL_CAPITAL=10000.0
EXCHANGE__PAPER_TRADING=true

# ============================================================
# NOTIFICATIONS
# ============================================================
# Discord webhook for trade notifications
# Create webhook: Discord Server > Edit Channel > Integrations > Webhooks
NOTIFICATION__DISCORD_ENABLED=false
NOTIFICATION__DISCORD_WEBHOOK_URL=

# Notification events
NOTIFICATION__NOTIFY_ON_ORDER_SENT=true
NOTIFICATION__NOTIFY_ON_ORDER_FILLED=true
NOTIFICATION__NOTIFY_ON_ORDER_CANCELLED=true
NOTIFICATION__NOTIFY_ON_ERROR=true

# ============================================================
# STORAGE AND CLOUD SYNC
# ============================================================
# Local database path
STORAGE__DATABASE_PATH=./data/trading.db

# Cloud backup sync
STORAGE__CLOUD_SYNC_ENABLED=false
STORAGE__CLOUD_SYNC_INTERVAL_MINUTES=5

# Cloud Provider Selection (IMPORTANT: Set this based on your deployment)
# Options: local, oracle, aws, azure, gcp
STORAGE__CLOUD_PROVIDER=local

# ============================================================
# CLOUD PROVIDER CREDENTIALS (Configure based on STORAGE__CLOUD_PROVIDER)
# ============================================================

# -----------------------------
# Oracle Cloud Object Storage
# -----------------------------
# Set STORAGE__CLOUD_PROVIDER=oracle and configure:
STORAGE__ORACLE_BUCKET_NAME=
STORAGE__ORACLE_NAMESPACE=
# OCI CLI config file (optional, defaults to ~/.oci/config)
OCI_CONFIG_FILE=~/.oci/config
OCI_CONFIG_PROFILE=DEFAULT

# -----------------------------
# AWS S3
# -----------------------------
# Set STORAGE__CLOUD_PROVIDER=aws and configure:
STORAGE__AWS_BUCKET_NAME=
STORAGE__AWS_REGION=us-east-1
# AWS credentials (or use IAM role if on EC2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# -----------------------------
# Azure Blob Storage
# -----------------------------
# Set STORAGE__CLOUD_PROVIDER=azure and configure:
STORAGE__AZURE_CONTAINER_NAME=
STORAGE__AZURE_STORAGE_ACCOUNT_NAME=
# Connection string (get from Azure Portal)
AZURE_STORAGE_CONNECTION_STRING=

# -----------------------------
# Google Cloud Storage (GCP)
# -----------------------------
# Set STORAGE__CLOUD_PROVIDER=gcp and configure:
STORAGE__GCP_BUCKET_NAME=
STORAGE__GCP_PROJECT_ID=
# Path to service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=./config/gcp-service-account.json

# ============================================================
# FEATURE FLAGS
# ============================================================
# Enable/disable features without code changes
FEATURE__ENABLE_DASHBOARD_API=true
FEATURE__ENABLE_HEALTH_CHECKS=true
FEATURE__ENABLE_CLOUD_SYNC=false
FEATURE__ENABLE_NOTIFICATIONS=false
FEATURE__ENABLE_MTF_VALIDATION=true
FEATURE__ENABLE_RISK_MANAGEMENT=true

# Trading permissions
FEATURE__ALLOW_SHORT_SELLING=false
FEATURE__ALLOW_OPTIONS_TRADING=false
FEATURE__ALLOW_MARGIN_TRADING=false

# ============================================================
# DASHBOARD CONFIGURATION
# ============================================================
DASHBOARD__ENABLED=true
DASHBOARD__STREAMLIT_MODE=local
DASHBOARD__AUTO_REFRESH_SECONDS=5

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/trading-bot.log

# ============================================================
# STRATEGY CONFIGURATION
# ============================================================
# Override symbols (comma-separated)
# SYMBOLS=AAPL,MSFT,AMZN,TSLA,GOOGL

# ============================================================
# NOTES
# ============================================================
# - Use double underscores (__) for nested config
#   Example: API__BASE_URL maps to api.base_url in config
# - Environment variables override YAML config values
# - Secret values (API keys, webhooks) should ONLY be in .env files
# - YAML files are for non-secret configuration
